---
const { filled } = Astro.props;
---

<a
  class:list={[
    `
     text-sm text-center 
     font-semibold
     rounded-xl
     px-4 py-2.5
     flex items-center gap-x-3   
     border-2  
     truncate
    `,
    {
      "bg-blue-500 dark:bg-blue-400/30 border-transparent text-white hover:bg-blue-400/60 hover:dark:bg-blue-400":
        filled,
    },
    {
      "border-blue-500 text-blue-500 dark:text-white hover:text-white hover:border-transparent dark:border-white hover:bg-blue-400/70 hover:dark:bg-blue-400/70 hover:dark:border-transparent":
        !filled,
    },
  ]}
  {...Astro.props}
  target="_blank"
>
  <slot />
</a>
